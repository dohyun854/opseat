<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OpSeat - 최적의 자리 배치</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/font.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body class="d-flex flex-column align-items-center bg-light">
    <div class="container-fluid d-flex flex-row justify-content-center align-items-center">

        <!-- main container -->
        <div class="d-flex flex-column align-items-center">
            
            <div id="main-container" class="container-lg rounded p-2 shadow d-flex flex-column align-items-center">
                <h3 class="display-5 mt-2">자리 배치</h3>
            </div>
        </div>
        
        <!-- dropbox container -->
        <div class="d-flex flex-column align-items-center ml-3">
            
            <div id="drop-container-wrapper" class="drop-container-wrapper rounded shadow d-flex flex-column align-items-center">
                <h3 class="display-5 mt-2">지망</h3>
                <div id="drop-container" class="drop-container w-100">
                    <% for (let row = 0; row < rows * columns; row++) { %>
                        <div class="drop-row">
                            <p><%= row + 1 %>번</p>
                            <% for (let col = 0; col < 3; col++) {
                                const index = row * 3 + col; %>
                                <% if (index < rows * columns * 3) { %>
                                    <select class="form-control" id="drop-<%= index %>">
                                        <option value="랜덤">랜덤</option>
                                        <% for (let i = 1; i <= rows * columns; i++) { %>
                                            <option value="<%= i %>"><%= i %></option>
                                        <% } %>
                                    </select>
                                <% } %>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

    </div>

    <div class="container-fluid d-flex flex-row justify-content-center align-items-center">
    
        <!--low container left-->
        <div class="low-container-left align-items-center d-flex flex-column justify-content-center mt-3 mb-4 rounded shadow">
            <h5 class="mt-2">자리 제거</h5>
            <select id="remove-dropdown" class="form-control">
                <% for (let i = 1; i <= rows * columns; i++) { %>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>
            <button id="remove-button" class="btn btn-danger mt-2 mb-2">제거</button>
        </div>
    
        <!--low container right-->
        <div class="low-container-right align-items-center d-flex justify-content-center mt-3 mb-4 rounded shadow ml-3">
            <button id="start" class="btn btn-primary btn-lg">자리 배치!</button>
        </div>
    
    </div>
    

    <script src="/main.js"></script>
</body>
</html>
